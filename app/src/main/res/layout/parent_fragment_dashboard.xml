<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true"
    tools:context=".ui.parent.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <View
            android:id="@+id/headerBg"
            style="@style/DashboardHeaderView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcomeTitle"
            style="@style/DashboardWelcomeLabel"
            android:layout_marginStart="20dp"
            android:layout_marginTop="48dp"
            android:text="Bienvenido de nuevo,"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            style="@style/DashboardWelcomeName"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="@id/tvWelcomeTitle"
            app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
            tools:text="Carlos Vargas" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            style="@style/DashboardAvatar"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/tvWelcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvWelcomeTitle"
            tools:src="@drawable/ic_parent_avatar_24" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFinance"
            style="@style/DashboardFinanceCard"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvFinanceTitle"
                    style="@style/DashboardCardTitle"
                    android:text="Próximo Vencimiento"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvNextPaymentInfo"
                    style="@style/DashboardCardAmount"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFinanceTitle"
                    tools:text="S/ 450.00" />

                <TextView
                    android:id="@+id/tvNextPaymentLabel"
                    style="@style/DashboardCardSubtitle"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvNextPaymentInfo"
                    tools:text="Matrícula - Luis Ramírez" />

                <View
                    android:id="@+id/divider"
                    style="@style/DashboardDivider"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tvNextPaymentLabel" />

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_date_range_24"
                    app:tint="?attr/colorError"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

                <TextView
                    android:id="@+id/tvNextPaymentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceLabelLarge"
                    android:textColor="?attr/colorError"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/ivCalendar"
                    app:layout_constraintBottom_toBottomOf="@id/ivCalendar"
                    app:layout_constraintTop_toTopOf="@id/ivCalendar"
                    tools:text="Vence el 15 de Noviembre" />

                <LinearLayout
                    android:id="@+id/layoutOverduePayment"
                    style="@style/DashboardOverdueContainer"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ivCalendar"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_error_24"
                        app:tint="?attr/colorError" />

                    <TextView
                        android:id="@+id/tvOverdueCount"
                        style="@style/DashboardOverdueText"
                        android:layout_marginStart="8dp"
                        tools:text="Tienes 2 pagos vencidos" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/lblStudents"
            style="@style/ParentDashboardSectionTitle"
            android:layout_marginTop="32dp"
            android:text="Mis Hijos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFinance" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/lblStudents"
            tools:itemCount="3"
            tools:listitem="@layout/item_student_summary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>