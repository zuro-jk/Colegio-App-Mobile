<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F7FF"
    android:clipToPadding="false"
    tools:context=".ui.teacher.TeacherMainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_profile_header_curved"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitleTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel del Docente"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tvTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido, Prof. Luis Ramírez"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/white"
                android:layout_marginTop="8dp" />

        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAdminNotices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="#E3F2FD"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#0288D1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comunicados del Administrador"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        android:textColor="#01579B" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Recordar a los padres que el pago de diciembre vence el día 10.\n\n• Se actualizaron los montos de matrícula 2025.\n\n• No olvidar reportar inconvenientes de pagos."
                    android:layout_marginTop="12dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="#424242"
                    android:background="#F0F7FF"
                    android:padding="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPaymentStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="#E3F2FD"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardAdminNotices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="24dp"
                        android:background="#0288D1"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estado de Pagos • 5to Grado A"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textStyle="bold"
                        android:textColor="#01579B" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvStatsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:background="#E1F5FE"
                    android:text="Pagado: 18 alumnos\nPendiente: 7 alumnos\nTotal sección: 25 alumnos"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textStyle="bold"
                    android:textColor="#0288D1" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- CARD 3: ALUMNOS CON PAGO PENDIENTE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPendingStudents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="#E3F2FD"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardPaymentStats"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <View
                            android:layout_width="4dp"
                            android:layout_height="24dp"
                            android:background="#0288D1"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alumnos con Pago Pendiente"
                            android:textAppearance="?attr/textAppearanceTitleMedium"
                            android:textStyle="bold"
                            android:textColor="#01579B" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNotifyAll"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificar a todos"
                        android:textColor="#0288D1"
                        app:strokeColor="#0288D1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- LISTA DE ALUMNOS (simulada) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@android:drawable/divider_horizontal_bright"
                    android:showDividers="middle"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Ana Torres – Pendiente noviembre"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#1A237E"
                        android:background="#F0F7FF" />

                    <TextView
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• José Alvarado – Pendiente diciembre"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#1A237E"
                        android:background="#F0F7FF" />

                    <TextView
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• María Estrada – Sin pagos desde octubre"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#1A237E"
                        android:background="#F0F7FF" />

                    <TextView
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Kevin Ramos – Pendiente noviembre"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#1A237E"
                        android:background="#F0F7FF" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>