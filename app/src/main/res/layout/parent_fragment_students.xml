<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:color/transparent"
        android:showDividers="middle"
        android:dividerPadding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Estudiantes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp"/>

        <!-- Ejemplo de Card de estudiante -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/neu_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_student_24"
                    android:scaleType="centerCrop"
                    android:contentDescription="Avatar"
                    android:background="@drawable/bg_circle_neu"/>

                <!-- Info estudiante -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvStudentName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juan Pérez"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/on_background"/>

                    <TextView
                        android:id="@+id/tvStudentClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clase: Matemáticas"
                        android:textSize="14sp"
                        android:textColor="@color/secondary"
                        android:layout_marginTop="4dp"/>

                    <!-- Progreso -->
                    <TextView
                        android:id="@+id/tvStudentProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso: 85%"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Botón acción -->
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver"
                    android:textColor="@color/on_primary"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/primary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Repetir la card para más estudiantes -->
    </LinearLayout>
</ScrollView>
