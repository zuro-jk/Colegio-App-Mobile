<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.parent.payments.PaymentsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagos y MatrÃ­culas"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvTotalDueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pendiente"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="@color/on_primary"
                        android:alpha="0.8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tvTotalDueLabel"
                        app:thumbTint="@color/primary"
                        app:trackTint="@color/white"
                        android:layout_marginTop="10sp"
                        />

                    <TextView
                        android:id="@+id/tvDiscountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplicar Dscto. Anual"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/switchDiscount"
                        app:layout_constraintBottom_toBottomOf="@id/switchDiscount"
                        app:layout_constraintTop_toTopOf="@id/switchDiscount"/>

                    <TextView
                        android:id="@+id/tvOriginalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="S/ 4500.00"
                        android:textColor="@color/on_primary"
                        android:textSize="16sp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:text="S/ 4500.00"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalDueLabel"/>

                    <TextView
                        android:id="@+id/tvTotalDueAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceHeadlineMedium"
                        android:textColor="@color/on_primary"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvOriginalAmount"
                        tools:text="S/ 4500.00" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSavings"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Ahorras S/ 450.00"
                        android:textColor="@color/white"
                        app:chipBackgroundColor="@color/secondary"
                        app:chipStrokeWidth="0dp"
                        android:layout_marginStart="12dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintStart_toEndOf="@id/tvTotalDueAmount"
                        app:layout_constraintBottom_toBottomOf="@id/tvTotalDueAmount"
                        app:layout_constraintTop_toTopOf="@id/tvTotalDueAmount"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPayAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pagar Todo"
                        app:backgroundTint="@color/secondary"
                        app:icon="@drawable/ic_payments_24"
                        android:textColor="@color/white"
                        app:iconTint="@color/white"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/tvTotalDueAmount"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPayments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_payment"
        tools:itemCount="5"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>