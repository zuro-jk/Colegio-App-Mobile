<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Schooljeyix" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- ðŸŽ¨ Colores principales -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>

        <!-- Fondo general -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Superficies -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- TipografÃ­a general -->
        <item name="android:textColor">@color/on_surface</item>
        <!--        <item name="android:fontFamily">@font/inter</item>-->
    </style>

    <style name="Theme.Schooljeyix" parent="Base.Theme.Schooljeyix" />

    <!-- âœ… Estilo global para TextInputLayout -->
    <style name="Widget.Schooljeyix.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/secondary</item>
    </style>

    <!-- âœ… Estilo global para EditText dentro del TextInputLayout -->
    <style name="Widget.Schooljeyix.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- âœ… Estilo global para botones -->
    <style name="Widget.Schooljeyix.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">50dp</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Schooljeyix</item>
    </style>

    <style name="DashboardSectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceTitleMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="DashboardKpiCard" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DashboardKpiIcon" parent="">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DashboardKpiValue" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadlineMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DashboardKpiLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DashboardActionCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="DashboardActionContent" parent="">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DashboardActionIcon" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="DashboardActionLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="DashboardStatCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="DashboardStatContent" parent="">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DashboardStatIcon" parent="">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="DashboardStatLabel" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DashboardStatValue" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">?attr/textAppearanceHeadlineSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="DashboardActionCard.FullWidth" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="DashboardActionChevron" parent="">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_chevron_right_24</item>
        <item name="android:tint">?android:attr/textColorSecondary</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
