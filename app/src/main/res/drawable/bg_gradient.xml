<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fondo degradado -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primary"
                android:endColor="@color/primary_light"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Ola decorativa arriba -->
    <item
        android:drawable="@drawable/bg_wave_top"
        android:gravity="top" />

    <!-- Ola decorativa abajo -->
    <item
        android:drawable="@drawable/bg_wave_bottom"
        android:gravity="bottom" />

</layer-list>
